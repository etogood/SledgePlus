<Window x:Class="SledgePlus.WPF.Views.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:SledgePlus.WPF.ViewModels.UserControls"
        xmlns:v="clr-namespace:SledgePlus.WPF.Views.UserControls"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Background="{DynamicResource MaterialDesignDarkBackground}"
        mc:Ignorable="d"
        Title="SledgePlus" WindowStartupLocation="CenterScreen"
        MinHeight="500" MinWidth="910" Height="500" Width="910">
    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:WelcomeViewModel}">
            <v:WelcomeUserControl />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:AuthenticationViewModel}">
            <v:AuthenticationUserControl />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:SignInViewModel}">
            <v:SignInUserControl />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:IDEViewModel}">
            <v:IDEUserControl />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:LearningMenuViewModel}">
            <v:LearningMenuUserControl />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:UserMenuViewModel}">
            <v:UserMenuUserControl />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:PersonalAccountViewModel}">
            <v:PersonalAccountUserCommand />
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="1"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel>
            <DockPanel>
                <StackPanel Orientation="Horizontal"  Height="50" DockPanel.Dock="Left" HorizontalAlignment="Left">
                    <Button Width="140" Height="40" Content="Обучение" Style="{StaticResource MaterialDesignOutlinedButton}" Margin="10 0 0 0" Command="{Binding ToLearningMenuCommand}" Cursor="Hand" />
                    <Button Width="140" Height="40" Content="Практика" Style="{StaticResource MaterialDesignOutlinedButton}" Margin="10 0 0 0" Command="{Binding ToIDECommand}" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Height="50" DockPanel.Dock="Right" HorizontalAlignment="Right">
                    <Button Width="140" Height="30" Content="Личный кабинет" FontSize="10" Margin="0 0 0 0"
                            Style="{StaticResource MaterialDesignFlatButton}" Command="{Binding ToPersonalAccountCommand}" />
                    <Button Width="120" Height="30" Content="Выйти" Margin="10 0 10 0"
                            FontSize="10" Command="{Binding QuitAccountCommand}" Cursor="Hand" />
                </StackPanel>
            </DockPanel>
        </StackPanel>
        <Button Grid.Row="0" HorizontalAlignment="Center" Style="{DynamicResource MaterialDesignFloatingActionMiniDarkButton}" Cursor="Hand" Command="{Binding ToWelcomeCommand}">
            <Image Source="../Resources/home_logo.png" Margin="3"/>
        </Button>

        <Rectangle Grid.Row="1" Fill="Gray"/>
        <ContentControl Grid.Row="2" Content="{Binding CurrentViewModel}" Height="auto" />
    </Grid>
</Window>