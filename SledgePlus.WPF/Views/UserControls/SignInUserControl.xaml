<UserControl x:Class="SledgePlus.WPF.Views.UserControls.SignInUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SledgePlus.WPF.Views.UserControls"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             Background="{DynamicResource MaterialDesignDarkBackground}"
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <Label Content="Данные для входа" FontSize="30" HorizontalAlignment="Center" />
        <TextBlock HorizontalAlignment="Center" Text="{Binding UserData}" Margin="10" />
        <TextBlock DataContext="{Binding ErrorMessageViewModel}" Text="{Binding Message}"
                   Visibility="{Binding HasMessage, Converter={StaticResource BooleanToVisibilityConverter}}"
                   Foreground="Red" TextAlignment="Center" HorizontalAlignment="Center" Width="auto" MinWidth="200" Height="auto" />
        <TextBox Text="{Binding Login, UpdateSourceTrigger=PropertyChanged}" materialDesign:HintAssist.Hint="Логин" Style="{StaticResource MaterialDesignTextBox}" Tag="Логин*" Width="auto" MaxWidth="400" />
        <PasswordBox materialDesign:PasswordBoxAssist.Password="{Binding Password, UpdateSourceTrigger=PropertyChanged}" materialDesign:HintAssist.Hint="Пароль" Style="{StaticResource MaterialDesignRevealPasswordBox}" Width="auto" MaxWidth="400" Margin="0 10 0 0" />
        <TextBlock Foreground="GreenYellow" Text="Пароль должен содержать как минимум 8 символов, из которых 1 специальный и 1 заглавный" MaxWidth="400" TextWrapping="Wrap" TextAlignment="Center" FontSize="8" Margin="10"/>
        <Button Command="{Binding SignInCommand}" Height="30" HorizontalAlignment="Center" Content="Зарегистрироваться" Width="auto" MinWidth="200" Margin="0 10 0 0" />
    </StackPanel>
</UserControl>