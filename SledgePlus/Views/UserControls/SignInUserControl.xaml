<UserControl x:Class="SledgePlus.WPF.Views.UserControls.SignInUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SledgePlus.WPF.Views.UserControls"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <Label Content="Регистрация" FontSize="30" HorizontalAlignment="Center"/>
        <TextBlock Text="{Binding Message}" Foreground="{Binding Color}" TextAlignment="Center" HorizontalAlignment="Center" Width="auto" MinWidth="200" Height="auto"/>
        <TextBox Style="{StaticResource TextBoxPlaceHolder}" Tag="Login" Width="auto" MaxWidth="200"/>
        <TextBox Style="{StaticResource TextBoxPlaceHolder}" Tag="Password" Width="auto" MaxWidth="200"/>
        <Button Command="{Binding LogInCommand}" Height="30" HorizontalAlignment="Center" Content="Зарегистрироваться" Width="auto" MinWidth="200" Margin="0 10 0 0" />
    </StackPanel>
</UserControl>
