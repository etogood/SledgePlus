<Window x:Class="SledgePlus.WPF.Views.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SledgePlus.WPF.Views.Windows"
        xmlns:vm="clr-namespace:SledgePlus.WPF.ViewModels.UserControls"
        xmlns:v="clr-namespace:SledgePlus.WPF.Views.UserControls"
        mc:Ignorable="d"
        Title="SledgePlus" 
        Height="{Binding Height, UpdateSourceTrigger=PropertyChanged}" MinHeight="{Binding Height}" MaxHeight="{Binding Height}" 
        Width="{Binding Width, UpdateSourceTrigger=PropertyChanged}" MinWidth="{Binding Width}" MaxWidth="{Binding Width}">
    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:AuthenticationViewModel}">
            <v:AuthenticationUserControl/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:SignInViewModel}">
            <v:SignInUserControl/>
        </DataTemplate>
    </Window.Resources>
    <StackPanel>
        <ContentControl Content="{Binding CurrentViewModel}" Height="auto"/>
    </StackPanel>
</Window>
